#2


A = matrix (QQ,3,4,[0,3,2,5,8,-7,1,2,5,1,-4,9])
print(A)
print("-----------------")
ab5 = A.with_rescaled_row(1,-5)
print(ab5)
print("-----------------")
abb = ab5.with_added_multiple_of_row(2,1,1)
print(abb)


################################################################################

