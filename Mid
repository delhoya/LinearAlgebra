#4
aa = matrix ([[1,-4,0,3,1],[5,1,-1,6,-4],[-2,8,7,-3,5],[0,0,0,2,-7],[0,0,0,-8,9]])
print(aa)
print("====")
print("A inverse det()")
print(aa.inverse().det())
print("====")
print("det A")

print(aa.det())


################################################################################


[ 1 -4  0  3  1]
[ 5  1 -1  6 -4]
[-2  8  7 -3  5]
[ 0  0  0  2 -7]
[ 0  0  0 -8  9]
====
A inverse det()
-1/5586
====
det A
-5586
